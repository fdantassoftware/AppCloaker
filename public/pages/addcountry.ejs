<div class="jumbotron text-center">
    <h1>Add Countries </h1>

    <!--<p>{{ message }}</p>-->

    <div ng-controller="addcountryController">
        <div class="row">
            <div class="col-md-6 col-md-offset-3">

                <form ng-submit="addCountries()" style="margin-top:30px;">
                    <div>
                        <textarea class="isp-test" ng-keyup="resize($event)" ng-keydown="resize($event)" placeholder="Paste your countries here..." ng-model="formData.countryText"></textarea>
                    </div>
