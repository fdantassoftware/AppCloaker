<div ng-controller="siteController">
<div class="jumbotron text-center">
	<h1>Add New Item </h1>

  <!--<p>{{ message }}</p>-->
	
<div ng-controller="listController">
	<div class="row">
    <div class="col-md-6 col-md-offset-3">

      <form ng-submit="addList()"
        style="margin-top:30px;">


         <b>List Name</b><br>
        <div class="form-group" align="center">
          <input ng-model="formData.name" class="form-control"  ng-style="{'width': 500 + 'px'}" required>
          </input>
        </div>
         <div class="form-group" align="center">
        <b> Select icon </b><br>
             <button type="button" class="btn btn-primary" ng-click="pickClicked()">Pick Image</button>
             <br>
             <b>{{imageName}}</b><br>
       <!--<input type="filepicker" data-fp-apikey="AsnWHOJLpS5qS66mk0Gs0z" onchange="console.log(event.fpfile.url)" ng-model="formData.logo">-->
        </div>
          <b>type in corresponding carousel item </b><br>
          <div class="form-group" align="center">
              <input ng-model="formData.nameOfCarouselItem" class="form-control"  ng-style="{'width': 500 + 'px'}" required>
              </input>
          </div>
          <div class="form-group" align="center">
              <b> Choose image for casino carousel </b><br>
              <button type="button" class="btn btn-primary" ng-click="pickCarouselImage()">Pick Image</button>
              <br>
              <b>{{casinoCarouselImageName}}</b><br>
          </div>

        <div class="form-group" align="center">
        <br>
        <b> Select Platform</b>
        <select ng-model="formData.category">
                        <option ng-repeat="x in category" value="{{x.type}}">{{x.type}}</option>
                        </select>
                        </div>


          <div class="form-group" align="center">
              <br>
              <b> Select an App</b>
              <select ng-model="formData.appId">
                  <!--<option ng-repeat="app in apps" value="{{app.name}}">{{x.name}}</option>-->
                  <option ng-repeat="app in apps" value={{app.name}}>{{app.name}}</option>
              </select>
          </div>


        <b>Description</b><br>
        <div class="form-group" align="center">
          <input ng-model="formData.description" class="form-control"  ng-style="{'width': 300 + 'px'}" required>
          </input>
        </div>

  <br>

          <br>
        <button type="submit" class="btn btn-primary">Add List</button>
      </form>
    </div>
  </div>
</div>
</div>